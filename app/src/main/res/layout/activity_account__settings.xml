<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_disabled"
    tools:context="com.example.hidnam.firebase_1.Account_Settings">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/toolbar_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:src="@drawable/if_anonymous_334588" />

    <TextView
        android:id="@+id/settings_name_textView"
        style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:clickable="false"
        android:editable="false"
        android:gravity="center"
        android:hint="your Name"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/settings_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_change_Image"
        android:layout_alignEnd="@+id/settings_image"
        android:layout_alignStart="@+id/settings_image"
        android:layout_marginBottom="15dp"
        android:background="@android:color/background_light"
        android:text="Change Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_change_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_change_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_change_name"
        android:layout_marginBottom="32dp"
        android:background="@color/colorAccent"
        android:text="Chnage Image"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>
