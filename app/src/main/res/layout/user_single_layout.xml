<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/if_anonymous_334588" />

    <TextView
        android:id="@+id/single_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_image_view"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/single_image_view"
        android:layout_toEndOf="@+id/single_image_view"
        android:gravity="fill"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
</RelativeLayout>